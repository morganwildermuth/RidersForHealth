<div class="new_direction">
	<%= form_for @direction do |f| %>
		<div>
			<%= f.label :from_village %>
			<br>
			<%= f.text_field :start_village_id %>
		</div>

		<div> 
			<%= f.label :description %>
			<br>
			<%= f.text_area :description %>
		</div>

		<div>
			<%= f.label :to_village %>
			<br>
			<%= f.text_field :end_village_id %>
		</div>

		<%= f.submit %>
	<% end %>
</div>
